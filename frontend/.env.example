# ============================================================================
# Frontend Environment Configuration
# Copy this file to .env.local and update with your settings
# ============================================================================

# ============================================================================
# API Configuration
# ============================================================================

# Backend API URL (FastAPI server)
# Default: http://localhost:8000
# Production: https://api.yourdomain.com
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# API Version
# Default: v1
NEXT_PUBLIC_API_VERSION=v1

# API Request Timeout (milliseconds)
# Default: 30000 (30 seconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# API Retry Attempts
# Number of times to retry failed requests
# Default: 3
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3

# ============================================================================
# Feature Flags
# ============================================================================

# Use Backend API (set to false to use mock data for development)
# Default: true
NEXT_PUBLIC_USE_BACKEND_API=true

# Enable Document Upload
# Default: true
NEXT_PUBLIC_ENABLE_DOCUMENT_UPLOAD=true

# Enable AI-Generated Image Detection
# Default: true
NEXT_PUBLIC_ENABLE_AI_DETECTION=true

# Enable Advanced Forensic Analysis
# Default: true
NEXT_PUBLIC_ENABLE_FORENSIC_ANALYSIS=true

# Enable Reverse Image Search (requires backend API keys)
# Default: false
NEXT_PUBLIC_ENABLE_REVERSE_IMAGE_SEARCH=false

# Enable Real-Time Alerts
# Default: true
NEXT_PUBLIC_ENABLE_REALTIME_ALERTS=true

# Enable Drag-and-Drop Kanban Board
# Default: true
NEXT_PUBLIC_ENABLE_KANBAN_BOARD=true

# ============================================================================
# UI Configuration
# ============================================================================

# Application Name
# Default: Speed-Run AML Platform
NEXT_PUBLIC_APP_NAME=Speed-Run AML Platform

# Application Version
# Default: 1.0.0
NEXT_PUBLIC_APP_VERSION=1.0.0

# Items Per Page (Pagination)
# Default: 10
NEXT_PUBLIC_ITEMS_PER_PAGE=10

# Auto-Refresh Interval (milliseconds)
# Set to 0 to disable auto-refresh
# Default: 30000 (30 seconds)
NEXT_PUBLIC_AUTO_REFRESH_INTERVAL=30000

# Maximum File Size for Uploads (bytes)
# Default: 10485760 (10MB)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Allowed File Types (comma-separated)
# Default: .pdf,.png,.jpg,.jpeg,.tiff,.bmp,.docx
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.pdf,.png,.jpg,.jpeg,.tiff,.bmp,.docx

# ============================================================================
# Development & Debugging
# ============================================================================

# Enable Debug Mode (verbose logging)
# Default: false
NEXT_PUBLIC_DEBUG=false

# Enable Development Tools in Production
# WARNING: Do not enable in production
# Default: false
NEXT_PUBLIC_ENABLE_DEV_TOOLS=false

# Log API Requests and Responses
# Default: false (auto-enabled in development)
NEXT_PUBLIC_LOG_API_CALLS=false

# Show Performance Metrics
# Default: false
NEXT_PUBLIC_SHOW_PERFORMANCE_METRICS=false

# ============================================================================
# Authentication (Placeholder for future implementation)
# ============================================================================

# Enable Authentication
# Default: false (not implemented yet)
NEXT_PUBLIC_ENABLE_AUTH=false

# Session Timeout (minutes)
# Default: 30
NEXT_PUBLIC_SESSION_TIMEOUT=30

# ============================================================================
# External Services (Optional)
# ============================================================================

# Supabase Configuration (if using Supabase for storage/auth)
# Get from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Analytics (Google Analytics, Mixpanel, etc.)
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Error Tracking (Sentry, etc.)
NEXT_PUBLIC_SENTRY_DSN=

# ============================================================================
# Production Settings (Uncomment for production)
# ============================================================================

# Production Backend URL
# NEXT_PUBLIC_BACKEND_URL=https://api.speedrun-aml.com

# Disable Debug in Production
# NEXT_PUBLIC_DEBUG=false

# Disable Dev Tools in Production
# NEXT_PUBLIC_ENABLE_DEV_TOOLS=false

# Enable Authentication in Production
# NEXT_PUBLIC_ENABLE_AUTH=true

# ============================================================================
# Notes
# ============================================================================

# 1. This file should NOT be committed to version control
# 2. Copy to .env.local for development
# 3. All NEXT_PUBLIC_* variables are exposed to the browser
# 4. Never put sensitive data (API secrets, private keys) in NEXT_PUBLIC_* variables
# 5. For server-side only variables (API routes), omit the NEXT_PUBLIC_ prefix
# 6. See lib/config.ts for how these variables are used
# 7. Changes to .env files require restarting the Next.js dev server
